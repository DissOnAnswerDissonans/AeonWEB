<UserControl x:Class="Aeon.WindowsClient.Views.HeroDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aeon.WindowsClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="128" d:DesignWidth="128">
  <Grid SnapsToDevicePixels="True" ClipToBounds="True">
    <Image x:Name="img" Stretch="Fill" StretchDirection="Both" 
           RenderTransformOrigin="0.25, 0.0" >
      <Image.RenderTransform>
        <ScaleTransform ScaleX="5" ScaleY="10"/>
      </Image.RenderTransform>
      <Image.LayoutTransform>
        <ScaleTransform ScaleX="1" ScaleY="1"/>
      </Image.LayoutTransform>
    </Image>
  </Grid>
</UserControl>
