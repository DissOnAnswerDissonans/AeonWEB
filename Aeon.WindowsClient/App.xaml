<Application x:Class="Aeon.WindowsClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Aeon.WindowsClient"
             xmlns:vm="clr-namespace:Aeon.WindowsClient.ViewModels"
             xmlns:sr="clr-namespace:Microsoft.AspNetCore.SignalR.Client;assembly=Microsoft.AspNetCore.SignalR.Client.Core"
             xmlns:b="clr-namespace:Aeon.Base;assembly=Aeon.Base"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml"
             >
  <Application.Resources>
    <Style x:Key="BaseText">
      <Setter Property="Control.FontFamily" Value="Trebuchet MS"/>
      <Setter Property="Control.FontSize" Value="20"/>
      <Setter Property="Control.FontWeight" Value="Bold"/>
    </Style>
    <Style TargetType="TextBlock" BasedOn="{StaticResource ResourceKey=BaseText}"/>
    <Style TargetType="TextBox" BasedOn="{StaticResource ResourceKey=BaseText}"/>
    <Style TargetType="PasswordBox" BasedOn="{StaticResource ResourceKey=BaseText}"/>
    
    <sys:Double x:Key="Width">800</sys:Double>
    <sys:Double x:Key="Height">600</sys:Double>
    
  </Application.Resources>
</Application>
